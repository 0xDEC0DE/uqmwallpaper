<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.submedia.android.uqmwallpaper"
    android:versionCode="103"
    android:versionName="1.0.3"
>

    <uses-sdk android:minSdkVersion="7" />
    <uses-feature android:name="android.software.live_wallpaper" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher_wallpaper">

        <service
            android:label="@string/app_name"
            android:name=".UQMWallpaper"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/uqmwallpaper" />
        </service>
        <activity
            android:label="@string/app_settings"
            android:name=".Settings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/octet-stream" />
            </intent-filter>
        </activity>
		<activity android:name=".FileChooser" android:exported="false" >
		</activity>

    </application>
</manifest>
